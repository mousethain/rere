#!/usr/bin/env bash
# ========================================================
# Credit Code By mousevpn
# ========================================================
telegram_bot_token=$(cat /usr/local/etc/v2ray/bot.key)
telegram_chatid=$(cat /usr/local/etc/v2ray/client.id)

domain=$(cat /usr/local/etc/v2ray/domain)
CONFIG_FILE="/usr/local/etc/v2ray/config.json"
# Variabel untuk Onering
BUG_DOMAIN="bug.com"
ONERING_SNI="onering:${domain}:${BUG_DOMAIN}"

red() { echo -e "\033[32;1m${*}\033[0m"; }
clear

# --- Input Username ---
until [[ $user =~ ^[a-zA-Z0-9_]+$ && ${CLIENT_EXISTS} == '0' ]]; do
    echo -e "───────────────────────────"
    echo -e "   Add Xray/Vmess Account  "
    echo -e "───────────────────────────"
    read -rp "User: " -e user
    CLIENT_EXISTS=$(grep -w $user "$CONFIG_FILE" | wc -l)

    if [[ ${CLIENT_EXISTS} == '1' ]]; then
        clear
        echo -e "───────────────────────────"
        echo -e "   Add Xray/Vmess Account  "
        echo ""
        echo "Nama pengguna sudah terdaftar, silakan pilih nama lain."
        echo ""
        echo -e "───────────────────────────"
    fi
done

# --- UUID Otomatis ---
uuid=$(cat /proc/sys/kernel/random/uuid)

# --- Input Masa Aktif dan Limit IP ---
read -p "Expired (days): " masaaktif
read -rp "Limit IP (1-5, 0=unlimited): " limitip

if ! [[ "$limitip" =~ ^[0-5]$ ]]; then
    limitip=0
fi

# Hitung Expired
exp=$(date -d "$masaaktif days" +"%Y-%m-%d")

# --- Insert ke Config (Format BARU: ### user exp limitip) ---
sed -i '/###$/a\### '"$user $exp $limitip"'\
},{"id": "'""$uuid""'","alterId": 0,"email": "'""$user""'"' "$CONFIG_FILE"

# Restart Service
systemctl restart v2ray

# --- GENERATE LINK (LENGKAP) ---
# Fungsi Generate Base64
generate_vmess_json() {
    local add=$1
    local port=$2
    local tls=$3
    local sni=$4
    local type=$5
    local net=$6
    local path=$7
    
    cat << EOF
{
"v": "2",
"ps": "${user}-${type}",
"add": "${add}",
"port": "${port}",
"id": "${uuid}",
"aid": "0",
"net": "${net}",
"path": "${path}",
"type": "none",
"host": "${domain}",
"tls": "${tls}",
"sni": "${sni}"
}
EOF
}

# 1. Link Standar (Original)
vmesslink1="vmess://$(generate_vmess_json "${domain}" "443" "tls" "${domain}" "Ori-TLS" "ws" "/vmess" | base64 -w 0)"
vmesslink2="vmess://$(generate_vmess_json "${domain}" "80" "none" "" "Ori-NTLS" "ws" "/vmess" | base64 -w 0)"
vmesslink3="vmess://$(generate_vmess_json "${domain}" "443" "tls" "${domain}" "Ori-GRPC" "grpc" "vmess-grpc" | base64 -w 0)"

# 2. Link Onering (Bug.com)
vmesslink_onering_tls="vmess://$(generate_vmess_json "${BUG_DOMAIN}" "443" "tls" "${ONERING_SNI}" "Onering-TLS" "ws" "/vmess" | base64 -w 0)"
vmesslink_onering_grpc="vmess://$(generate_vmess_json "${BUG_DOMAIN}" "443" "tls" "${ONERING_SNI}" "Onering-GRPC" "grpc" "vmess-grpc" | base64 -w 0)"


# --- OUTPUT TELEGRAM ---
TEKS=$(cat <<EOF
<b>───────────────────</b>
   VMESS ACCOUNT   
<b>───────────────────</b>
<b>Remarks     : </b><code>${user}</code>
<b>Domain      : </b><code>${domain}</code>
<b>Onering Addr: </b><code>${BUG_DOMAIN}</code>
<b>Port Tls    : </b><code>443</code>
<b>UUID/ID     : </b><code>${uuid}</code>
<b>AlterId     : </b><code>0</code>
<b>Path        : </b><code>/vmess</code>
<b>SNI Onering : </b><code>${ONERING_SNI}</code>
<b>Limit IP    : </b><code>${limitip}</code>
<b>───────────────────</b>
<b>1. Link Standar</b>
<b>Link TLS    :</b>
<pre>${vmesslink1}</pre>
<b>Link NTLS  :</b>
<pre>${vmesslink2}</pre>
<b>Link GRPC   :</b>
<pre>${vmesslink3}</pre>
<b>───────────────────</b>
<b>2. Link Onering</b>
<b>Link TLS Onering :</b>
<pre>${vmesslink_onering_tls}</pre>
<b>Link GRPC Onering :</b>
<pre>${vmesslink_onering_grpc}</pre>
<b>───────────────────</b>
<b>Expired On  : </b><code>$exp</code>
<b>───────────────────</b>
EOF
)

curl -s -X POST "https://api.telegram.org/bot$telegram_bot_token/sendMessage" \
    -d "chat_id=$telegram_chatid" \
    -d "parse_mode=HTML" \
    --data-urlencode "text=$TEKS" > /dev/null

# --- OUTPUT TERMINAL ---
clear
echo -e "───────────────────"
echo -e "   VMESS ACCOUNT   "
echo -e "───────────────────"
echo -e "Remarks     : ${user}" 
echo -e "Domain      : ${domain}" 
echo -e "Onering Addr: ${BUG_DOMAIN}"
echo -e "Port Tls    : 443" 
echo -e "UUID/ID     : ${uuid}"
echo -e "AlterId     : 0"
echo -e "Path        : /vmess"
echo -e "SNI Onering : ${ONERING_SNI}"
echo -e "Limit IP    : ${limitip}"
echo -e "───────────────────"
echo -e "1. Link Standar"
echo -e "Link TLS    : ${vmesslink1}"
echo -e "Link NTLS   : ${vmesslink2}"
echo -e "Link GRPC   : ${vmesslink3}"
echo -e "───────────────────"
echo -e "2. Link Onering (Bug.com)"
echo -e "Link TLS    : ${vmesslink_onering_tls}"
echo -e "Link GRPC   : ${vmesslink_onering_grpc}"
echo -e "───────────────────"
echo -e "Expired On  : $exp"
echo -e "───────────────────"
echo ""
