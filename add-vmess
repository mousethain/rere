#!/usr/bin/env bash
# ========================================================
# Credit Code By mousevpn
# Author: mousevpn
# License: This configuration is licensed for personal or internal use only.
#          Redistribution, resale, or reuse of this code in any form
#          without explicit written permission from the author is prohibited.
#          Selling this code or its derivatives is strictly forbidden.
# ========================================================
telegram_bot_token=$(cat /usr/local/etc/v2ray/bot.key)
telegram_chatid=$(cat /usr/local/etc/v2ray/client.id)

# --- KONFIGURASI UMUM ---
domain=$(cat /usr/local/etc/v2ray/domain)
BUG_DOMAIN="bug.com"
HOST_HEADER="${domain}" 
VMESS_INBOUND_PORT=4 # Asumsi Port inbound VMESS di config.json
CONFIG_FILE="/etc/xray/config.json"
# --------------------------

# Output Warna
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m'

red() { echo -e "${GREEN}${*}\033[0m"; }
clear

# --- INPUT VALIDASI USERNAME ---
until [[ $user =~ ^[a-zA-Z0-9_]+$ && ${CLIENT_EXISTS} == '0' ]];
do
    echo -e "───────────────────────────"
    echo -e "   Add Xray/Vmess Account  "
    echo -e "───────────────────────────"

    read -rp "User: " -e user
    # Asumsi tag yang dicari adalah email/tag user
    CLIENT_EXISTS=$(grep -w $user $CONFIG_FILE | wc -l) 

    if [[ ${CLIENT_EXISTS} == '1' ]];
then
        clear
        echo -e "───────────────────────────"
        echo -e "   Add Xray/Vmess Account  "
        echo ""
        echo "Nama pengguna sudah terdaftar, silakan pilih nama lain."
        echo ""
        echo -e "───────────────────────────"
    fi
done

# 1. UUID OTOMATIS GENERATE (TIDAK DITANYA)
uuid=$(uuidgen)
echo "Generated new UUID: ${YELLOW}$uuid${NC}"

# 2. INPUT MASA AKTIF & LIMIT IP
read -p "Expired (days, 0=Permanent): " masaaktif
read -p "Limit IP (0=Unlimited): " limitip

# Konversi Masa Aktif ke Format Xray (milidetik Unix Epoch Time)
if [ -z "$masaaktif" ] || [ "$masaaktif" == "0" ]; then
    exp_date="Permanent"
    EXPIRED_MS=0
else
    exp_date=$(date -d "$masaaktif days" +"%Y-%m-%d")
    EXPIRED_MS=$(( $(date +%s) + (masaaktif * 86400) ))000
fi

# Konversi Limit IP
if [ -z "$limitip" ]; then
    LIMIT_IP=0
else
    LIMIT_IP=$limitip
fi

# 3. KONSTRUKSI DAN INSERT CLIENT KE CONFIG.JSON
NEW_CLIENT_JSON=$(cat << EOF
          {
            "id": "${uuid}",
            "email": "${user}",
            "limitIp": ${LIMIT_IP},
            "expired": ${EXPIRED_MS}
          },
EOF
)
# Logic untuk menyisipkan client baru ke array "clients" di VMESS inbound (Port 4)
sed -i "/\"port\": ${VMESS_INBOUND_PORT},/ {
    :a
    N
    /\"clients\": \[/ {
        s/\"clients\": \[/\"clients\": [\n${NEW_CLIENT_JSON}/
    }
}" "$CONFIG_FILE"

# 4. RESTART XRAY
systemctl restart xray

# 5. LINK GENERATION (Koreksi NTLS: Standar DITINGGAL, Onering DIHAPUS)

# --- FUNGSI GENERATE JSON VMESS (Base64) ---
generate_vmess_link() {
    local port=$1
    local tls_status=$2
    local address=$3
    local host_header=$4
    local tag=$5
    local sni_value=$6
    local vmess_aid="0" # Asumsi alterId 0

    local json_payload=$(cat << JSON
{
  "v": "2",
  "ps": "${user}-${tag}",
  "add": "${address}",
  "port": "${port}",
  "id": "${uuid}",
  "aid": "${vmess_aid}",
  "net": "ws",
  "type": "none",
  "host": "${host_header}",
  "path": "/vmess",
  "tls": "${tls_status}",
  "sni": "${sni_value}"
}
JSON
)
    echo -n "$json_payload" | base64 -w 0
}

# --- LINK VMESS ASLI (MENGGUNAKAN $domain) ---
# Link 1: Standar TLS (Port 443, host/sni=domain)
vmesslink1="vmess://$(generate_vmess_link 443 tls $domain $domain Ori-TLS $domain)"
# Link 2: Standar NTLS (Port 80, host=domain, tls=none) <-- DIKEMBALIKAN
vmesslink2="vmess://$(generate_vmess_link 80 none $domain $domain Ori-NTLS none)"

# --- LINK VMESS ONERING (MENGGUNAKAN BUG_DOMAIN) ---
# Link Onering TLS (Port 443, address=bug.com, host=domain, sni=onering:domain:bug.com)
ONERING_SNI_VALUE="onering:${HOST_HEADER}:${BUG_DOMAIN}"
vmesslink_onering_tls="vmess://$(generate_vmess_link 443 tls $BUG_DOMAIN $HOST_HEADER Onering-TLS $ONERING_SNI_VALUE)"

# Link Onering NTLS (Port 80) DIHAPUS

# 6. OUTPUT TELEGRAM
TEKS=$(cat <<EOF
<b>───────────────────</b>
   VMESS ACCOUNT   
<b>───────────────────</b>
<b>Remarks     : </b><code>${user}</code>
<b>Domain      : </b><code>${domain}</code>
<b>Server Addr : </b><code>${BUG_DOMAIN}</code> (Onering)
<b>Port Tls/NTLS:</b><code>443 / 80</code>
<b>UUID/ID     : </b><code>${uuid}</code>
<b>Path        : </b><code>/vmess</code>
<b>SNI Host    : </b><code>${HOST_HEADER}</code> <font color="#00ff00">(Original Host)</font>
<b>───────────────────</b>
<b>1. Link Standar (SNI/Host: ${domain})</b>
<b>Link TLS    :</b>
<pre>${vmesslink1}</pre>
<b>Link NTLS   :</b>
<pre>${vmesslink2}</pre>
<b>───────────────────</b>
<b>2. Link Onering (SNI/Host: bug.com)</b>
<b>Link TLS Onering :</b>
<pre>${vmesslink_onering_tls}</pre>
<b>───────────────────</b>
<b>Limit IP    : </b><code>${LIMIT_IP}</code>
<b>Expired On  : </b><code>$exp_date</code>
<b>───────────────────</b>
EOF
)

curl -s -X POST "https://api.telegram.org/bot$telegram_bot_token/sendMessage" \
    -d "chat_id=$telegram_chatid" \
    -d "parse_mode=HTML" \
    --data-urlencode "text=$TEKS" > /dev/null

# 7. OUTPUT TERMINAL
clear
echo -e "───────────────────"
echo -e "   VMESS ACCOUNT   "
echo -e "───────────────────"
echo -e "Remarks     : ${user}" 
echo -e "Domain      : ${domain}" 
echo -e "Server Addr : ${BUG_DOMAIN} (Onering)"
echo -e "Port Tls/NTLS: 443 / 80" 
echo -e "UUID/ID     : ${uuid}"
echo -e "Path        : /vmess"
echo -e "SNI Host    : ${HOST_HEADER}"
echo -e "───────────────────"
echo -e "1. Link Standar (SNI/Host: ${domain})"
echo -e "Link TLS    : ${vmesslink1}"
echo -e "Link NTLS   : ${vmesslink2}"
echo -e "───────────────────"
echo -e "2. Link Onering (SNI/Host: ${BUG_DOMAIN})"
echo -e "Link TLS Onering: ${vmesslink_onering_tls}"
echo -e "───────────────────"
echo -e "Limit IP    : ${LIMIT_IP}"
echo -e "Expired On  : $exp_date"
echo -e "───────────────────"
echo ""
