#!/usr/bin/env bash
# ========================================================
# Credit Code By mousevpn
# ========================================================
telegram_bot_token=$(cat /usr/local/etc/v2ray/bot.key)
telegram_chatid=$(cat /usr/local/etc/v2ray/client.id)

domain=$(cat /usr/local/etc/v2ray/domain)
CONFIG_FILE="/usr/local/etc/v2ray/config.json"
# Variabel untuk Onering
BUG_DOMAIN="bug.com"
ONERING_SNI="onering:${domain}:${BUG_DOMAIN}"

red() { echo -e "\033[32;1m${*}\033[0m"; }
clear

# --- Input Username ---
until [[ $user =~ ^[a-zA-Z0-9_]+$ && ${user_EXISTS} == '0' ]]; do
    echo -e "───────────────────────────"
    echo -e "  Add Xray/Trojan Account  "
    echo -e "───────────────────────────"
    read -rp "User: " -e user
    user_EXISTS=$(grep -w $user "$CONFIG_FILE" | wc -l)

    if [[ ${user_EXISTS} == '1' ]]; then
        clear
        echo -e "───────────────────────────"
        echo -e "  Add Xray/Trojan Account  "
        echo ""
        echo "Nama pengguna sudah terdaftar, silakan pilih nama lain."
        echo ""
        echo -e "───────────────────────────"
    fi
done

# --- Password Otomatis ---
password=$(cat /proc/sys/kernel/random/uuid)

# --- Input Masa Aktif dan Limit IP ---
read -p "Expired (days): " masaaktif
read -rp "Limit IP (1-5, 0=unlimited): " limitip

if ! [[ "$limitip" =~ ^[0-5]$ ]]; then
    limitip=0
fi

# Hitung Expired
exp=$(date -d "$masaaktif days" +"%Y-%m-%d")

# --- Insert ke Config (Format BARU: #! user exp limitip) ---
sed -i '/#trojan$/a\#! '"$user $exp $limitip"'\
},{"password": "'""$password""'","email": "'""$user""'"' "$CONFIG_FILE"

# Restart Service
systemctl restart v2ray

# --- GENERATE LINK (LENGKAP) ---

# Path WS disesuaikan dengan konfigurasi Nginx/Config
trojanlink="trojan://${password}@${domain}:443?path=%2Ftrojan-ws&security=tls&host=${domain}&type=ws&sni=${domain}#${user}-Ori-WS"
trojanlink1="trojan://${password}@${domain}:443?mode=gun&security=tls&type=grpc&serviceName=trojan-grpc&sni=${domain}#${user}-Ori-GRPC"

# 2. Link Onering (Modifikasi: bug.com)
trojanlink_onering_ws="trojan://${password}@${BUG_DOMAIN}:443?path=%2Ftrojan-ws&security=tls&host=${domain}&type=ws&sni=${ONERING_SNI}#${user}-Onering-WS"
trojanlink_onering_grpc="trojan://${password}@${BUG_DOMAIN}:443?mode=gun&security=tls&type=grpc&serviceName=trojan-grpc&host=${domain}&sni=${ONERING_SNI}#${user}-Onering-GRPC"

# --- OUTPUT TELEGRAM ---
TEKS=$(cat <<EOF
<b>───────────────────</b>
  TROJAN ACCOUNT
<b>───────────────────</b>
<b>Remarks    : </b><code>${user}</code>
<b>Domain     : </b><code>${domain}</code>
<b>Onering Addr: </b><code>${BUG_DOMAIN}</code>
<b>Port       : </b><code>443</code>
<b>Password   : </b><code>${password}</code>
<b>Path WS    : </b><code>/trojan-ws</code>
<b>ServiceName: </b><code>trojan-grpc</code>
<b>SNI Onering: </b><code>${ONERING_SNI}</code>
<b>Limit IP   : </b><code>${limitip}</code>
<b>───────────────────</b>
<b>1. Link Standar</b>
<b>Link WS   :</b>
<pre>${trojanlink}</pre>
<b>Link GRPC :</b>
<pre>${trojanlink1}</pre>
<b>───────────────────</b>
<b>2. Link Onering</b>
<b>Link WS Onering:</b>
<pre>${trojanlink_onering_ws}</pre>
<b>Link GRPC Onering:</b>
<pre>${trojanlink_onering_grpc}</pre>
<b>───────────────────</b>
<b>Expired On : </b><code>$exp</code>
<b>───────────────────</b>
EOF
)

curl -s -X POST "https://api.telegram.org/bot$telegram_bot_token/sendMessage" \
    -d "chat_id=$telegram_chatid" \
    -d "parse_mode=HTML" \
    --data-urlencode "text=$TEKS" > /dev/null

# --- OUTPUT TERMINAL ---
clear
echo -e "───────────────────"
echo -e "  TROJAN ACCOUNT"
echo -e "───────────────────"
echo -e "Remarks    : ${user}"
echo -e "Domain     : ${domain}"
echo -e "Onering Addr: ${BUG_DOMAIN}"
echo -e "Port       : 443"
echo -e "Password   : ${password}"
echo -e "Path WS    : /trojan-ws"
echo -e "ServiceName: trojan-grpc"
echo -e "SNI Onering: ${ONERING_SNI}"
echo -e "Limit IP   : ${limitip}"
echo -e "───────────────────"
echo -e "1. Link Standar"
echo -e "Link WS   : ${trojanlink}"
echo -e "Link GRPC : ${trojanlink1}"
echo -e "───────────────────"
echo -e "2. Link Onering (Bug.com)"
echo -e "Link WS   : ${trojanlink_onering_ws}"
echo -e "Link GRPC : ${trojanlink_onering_grpc}"
echo -e "───────────────────"
echo -e "Expired On : $exp"
echo -e "───────────────────"
echo ""
