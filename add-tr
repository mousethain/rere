#!/usr/bin/env bash
# ========================================================
# Credit Code By mousevpn
# Author: mousevpn
# License: This configuration is licensed for personal or internal use only.
#          Redistribution, resale, or reuse of this code in any form
#          without explicit written permission from the author is prohibited.
#          Selling this code or its derivatives is strictly forbidden.
# ========================================================
telegram_bot_token=$(cat /usr/local/etc/v2ray/bot.key)
telegram_chatid=$(cat /usr/local/etc/v2ray/client.id)

# --- KONFIGURASI UMUM ---
domain=$(cat /usr/local/etc/v2ray/domain)
BUG_DOMAIN="bug.com"
HOST_HEADER="${domain}" 
TROJAN_WS_PORT=5      # Port Trojan WS di config.json
TROJAN_GRPC_PORT=9    # Port Trojan gRPC di config.json
CONFIG_FILE="/etc/xray/config.json"
# --------------------------

# Output Warna
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m'

red() { echo -e "${GREEN}${*}\033[0m"; }
clear

# --- INPUT VALIDASI USERNAME ---
until [[ $user =~ ^[a-zA-Z0-9_]+$ && ${CLIENT_EXISTS} == '0' ]];
do
    echo -e "───────────────────────────"
    echo -e "   Add Xray/Trojan Account  "
    echo -e "───────────────────────────"

    read -rp "User: " -e user
    # Asumsi tag yang dicari adalah email/tag user
    CLIENT_EXISTS=$(grep -w $user $CONFIG_FILE | wc -l) 

    if [[ ${CLIENT_EXISTS} == '1' ]];
then
        clear
        echo -e "───────────────────────────"
        echo -e "   Add Xray/Trojan Account  "
        echo ""
        echo "Nama pengguna sudah terdaftar, silakan pilih nama lain."
        echo ""
        echo -e "───────────────────────────"
    fi
done

# 1. PASSWORD OTOMATIS GENERATE (TIDAK DITANYA)
password=$(uuidgen)
echo "Generated new Password: ${YELLOW}$password${NC}"

# 2. INPUT MASA AKTIF & LIMIT IP
read -p "Expired (days, 0=Permanent): " masaaktif
read -p "Limit IP (0=Unlimited): " limitip

# Konversi Masa Aktif ke Format Xray (milidetik Unix Epoch Time)
if [ -z "$masaaktif" ] || [ "$masaaktif" == "0" ]; then
    exp_date="Permanent"
    EXPIRED_MS=0
else
    exp_date=$(date -d "$masaaktif days" +"%Y-%m-%d")
    EXPIRED_MS=$(( $(date +%s) + (masaaktif * 86400) ))000
fi

# Konversi Limit IP
if [ -z "$limitip" ]; then
    LIMIT_IP=0
else
    LIMIT_IP=$limitip
fi

# 3. KONSTRUKSI DAN INSERT CLIENT KE CONFIG.JSON
NEW_CLIENT_JSON_TROJAN=$(cat << EOF
          {
            "password": "${password}",
            "email": "${user}",
            "limitIp": ${LIMIT_IP},
            "expired": ${EXPIRED_MS}
          },
EOF
)

# Insert ke Port 5 (Trojan WS)
sed -i "/\"port\": ${TROJAN_WS_PORT},/ {
    :a
    N
    /\"clients\": \[/ {
        s/\"clients\": \[/\"clients\": [\n${NEW_CLIENT_JSON_TROJAN}/
    }
}" "$CONFIG_FILE"

# Insert ke Port 9 (Trojan gRPC)
sed -i "/\"port\": ${TROJAN_GRPC_PORT},/ {
    :a
    N
    /\"clients\": \[/ {
        s/\"clients\": \[/\"clients\": [\n${NEW_CLIENT_JSON_TROJAN}/
    }
}" "$CONFIG_FILE"

# 4. RESTART XRAY
systemctl restart xray

# 5. LINK GENERATION (Standar dan Onering Baru)
ONERING_SNI_VALUE="onering%3A${HOST_HEADER}%3A${BUG_DOMAIN}"

# --- LINK TROJAN ASLI (MENGGUNAKAN $domain) ---
trojanlink_ori_ws="trojan://${password}@${domain}:443?path=%2Ftrojan-ws&security=tls&host=${domain}&type=ws&sni=${domain}#${user}-Ori-WS"
trojanlink_ori_grpc="trojan://${password}@${domain}:443?mode=gun&security=tls&type=grpc&serviceName=trojan-grpc&sni=${domain}#${user}-Ori-GRPC"

# --- LINK TROJAN ONERING (MENGGUNAKAN BUG_DOMAIN) ---
trojanlink_onering_ws="trojan://${password}@${BUG_DOMAIN}:443?path=%2Ftrojan-ws&security=tls&host=${HOST_HEADER}&type=ws&sni=${ONERING_SNI_VALUE}#${user}-Onering-WS"
trojanlink_onering_grpc="trojan://${password}@${BUG_DOMAIN}:443?mode=gun&security=tls&type=grpc&serviceName=trojan-grpc&host=${HOST_HEADER}&sni=${ONERING_SNI_VALUE}#${user}-Onering-GRPC"

# 6. OUTPUT TELEGRAM
TEKS=$(cat <<EOF
<b>───────────────────</b>
  TROJAN ACCOUNT
<b>───────────────────</b>
<b>Remarks    : </b><code>${user}</code>
<b>Domain     : </b><code>${domain}</code>
<b>Server Addr: </b><code>${BUG_DOMAIN}</code> (Onering)
<b>port       : </b><code>443</code>
<b>Password   : </b><code>${password}</code>
<b>Path WS    : </b><code>/trojan-ws</code>
<b>ServiceName: </b><code>trojan-grpc</code>
<b>SNI Host   : </b><code>${HOST_HEADER}</code> <font color="#00ff00">(Original Host)</font>
<b>───────────────────</b>
<b>1. Link Standar (SNI/Host: ${domain})</b>
<b>Link WS    :</b>
<pre>${trojanlink_ori_ws}</pre>
<b>Link GRPC  :</b>
<pre>${trojanlink_ori_grpc}</pre>
<b>───────────────────</b>
<b>2. Link Onering (SNI/Host: bug.com)</b>
<b>Link WS Onering:</b>
<pre>${trojanlink_onering_ws}</pre>
<b>Link GRPC Onering:</b>
<pre>${trojanlink_onering_grpc}</pre>
<b>───────────────────</b>
<b>Limit IP   : </b><code>${LIMIT_IP}</code>
<b>Expired On : </b><code>$exp_date</code>
<b>───────────────────</b>
EOF
)

curl -s -X POST "https://api.telegram.org/bot$telegram_bot_token/sendMessage" \
    -d "chat_id=$telegram_chatid" \
    -d "parse_mode=HTML" \
    --data-urlencode "text=$TEKS" > /dev/null

# 7. OUTPUT TERMINAL
clear
echo -e "───────────────────"
echo -e "  TROJAN ACCOUNT"
echo -e "───────────────────"
echo -e "Remarks    : ${user}"
echo -e "Domain     : ${domain}"
echo -e "Server Addr: ${BUG_DOMAIN} (Onering)"
echo -e "port       : 443"
echo -e "Password   : $password"
echo -e "Path WS    : /trojan-ws"
echo -e "ServiceName: trojan-grpc"
echo -e "SNI Host   : ${HOST_HEADER}"
echo -e "───────────────────"
echo -e "1. Link Standar (SNI/Host: ${domain})"
echo -e "Link WS   : ${trojanlink_ori_ws}"
echo -e "Link GRPC : ${trojanlink_ori_grpc}"
echo -e "───────────────────"
echo -e "2. Link Onering (SNI/Host: ${BUG_DOMAIN})"
echo -e "Link WS Onering: ${trojanlink_onering_ws}"
echo -e "Link GRPC Onering: ${trojanlink_onering_grpc}"
echo -e "───────────────────"
echo -e "Limit IP   : ${LIMIT_IP}"
echo -e "Expired On : $exp_date"
echo -e "───────────────────"
echo ""
