#          Redistribution, resale, or reuse of this code in any form
#          without explicit written permission from the author is prohibited.
#          Selling this code or its derivatives is strictly forbidden.
# ========================================================
telegram_bot_token=$(cat /usr/local/etc/v2ray/bot.key)
telegram_chatid=$(cat /usr/local/etc/v2ray/client.id)

# --- Ambil Domain Onering dari file baru ---
domain=$(cat /usr/local/etc/v2ray/domain)
ONERING_SNI=$(cat /usr/local/etc/v2ray/onering_sni 2>/dev/null)
if [ -z "$ONERING_SNI" ] || [ "$ONERING_SNI" == "N/A (Set me up!)" ]; then
    ONERING_SNI="$domain"
fi

red() { echo -e "\033[32;1m${*}\033[0m"; }
clear
until [[ $user =~ ^[a-zA-Z0-9_]+$ && ${CLIENT_EXISTS} == '0' ]];
do
    echo -e "───────────────────────────"
    echo -e "   Add Xray/Vless Account  "
    echo -e "───────────────────────────"

    read -rp "User: " -e user
    CLIENT_EXISTS=$(grep -w $user /usr/local/etc/v2ray/config.json | wc -l)

    if [[ ${CLIENT_EXISTS} == '1' ]];
then
        clear
        echo -e "───────────────────────────"
        echo -e "   Add Xray/Vless Account  "
        echo ""
        echo "please choose another name."
        echo ""
        echo -e "───────────────────────────"
    fi
done
#uuid=$(cat /proc/sys/kernel/random/uuid)
read -p "Expired (days): " masaaktif
read -p "Input uuid (Empty Default): " uuid
if [[ -z "$uuid" ||
"$uuid" =~ [[:space:]] || ${#uuid} -lt 5 ]]; then
    uuid=$(cat /proc/sys/kernel/random/uuid)
    echo "Generated new UUID: $uuid"
else
    echo "Using provided UUID: $uuid"
fi
exp=$(date -d "$masaaktif days" +"%Y-%m-%d")
sed -i '/#vless$/a\#& '"$user $exp"'\
},{"id": "'""$uuid""'","email": "'""$user""'"' /usr/local/etc/v2ray/config.json
systemctl restart v2ray

# --- LINK VLESS ASLI (MENGGUNAKAN $domain) ---
vlesslink1="vless://${uuid}@${domain}:443?path=/vless&security=tls&encryption=none&type=ws&host=${domain}&sni=${domain}#${user}-Ori-TLS"
vlesslink2="vless://${uuid}@${domain}:80?path=/vless&encryption=none&type=ws&host=${domain}#${user}-Ori-NTLS"
vlesslink3="vless://${uuid}@${domain}:443?mode=gun&security=tls&encryption=none&type=grpc&serviceName=vless-grpc&sni=${domain}#${user}-Ori-GRPC"

# --- LINK VLESS ONERING (MENGGUNAKAN $ONERING_SNI) ---
vlesslink_onering_tls="vless://${uuid}@${domain}:443?path=/vless&security=tls&encryption=none&type=ws&host=${ONERING_SNI}&sni=${ONERING_SNI}#${user}-Onering-TLS"
vlesslink_onering_ntls="vless://${uuid}@${domain}:80?path=/vless&encryption=none&type=ws&host=${ONERING_SNI}#${user}-Onering-NTLS"
vlesslink_onering_grpc="vless://${uuid}@${domain}:443?mode=gun&security=tls&encryption=none&type=grpc&serviceName=vless-grpc&sni=${ONERING_SNI}#${user}-Onering-GRPC"

# --- AKHIR MODIFIKASI LINK ---

TEKS=$(cat <<EOF
<b>───────────────────</b>
   VLESS ACCOUNT   
<b>───────────────────</b>
<b>Remarks     : </b><code>${user}</code>
<b>Domain      : </b><code>${domain}</code>
<b>Port Tls    : </b><code>443</code>
<b>Port Ntls   : </b><code>80, 2082</code>
<b>UUID/ID     : </b><code>${uuid}</code>
<b>Path        : </b><code>/vless</code>
<b>ServiceName : </b><code>vless-grpc</code>
<b>SNI Host    : </b><code>${ONERING_SNI}</code> <font color="#00ff00">(Onering Payload)</font>
<b>───────────────────</b>
<b>1. Link Standar (SNI/Host: ${domain})</b>
<b>Link TLS    :</b>
<pre>${vlesslink1}</pre>
<b>Link NTLS  :</b>
<pre>${vlesslink2}</pre>
<b>Link GRPC   :</b>
<pre>${vlesslink3}</pre>
<b>───────────────────</b>
<b>2. Link Onering (SNI/Host: ${ONERING_SNI})</b>
<b>Link TLS Onering :</b>
<pre>${vlesslink_onering_tls}</pre>
<b>Link NTLS Onering :</b>
<pre>${vlesslink_onering_ntls}</pre>
<b>Link GRPC Onering :</b>
<pre>${vlesslink_onering_grpc}</pre>
<b>───────────────────</b>
<b>Expired On  : </b><code>$exp</code>
<b>───────────────────</b>
EOF
)

curl -s -X POST "https://api.telegram.org/bot$telegram_bot_token/sendMessage" \
    -d "chat_id=$telegram_chatid" \
    -d "parse_mode=HTML" \
    --data-urlencode "text=$TEKS" > /dev/null

clear
echo -e "───────────────────"
echo -e "   VLESS ACCOUNT   "
echo -e "───────────────────"
echo -e "Remarks     : ${user}" 
echo -e "Domain      : ${domain}" 
echo -e "Port Tls    : 443" 
echo -e "Port Ntls   : 80, 2082" 
echo -e "UUID/ID     : ${uuid}"
echo -e "Path        : /vless"
echo -e "ServiceName : vless-grpc"
echo -e "SNI Payload : ${ONERING_SNI}"
echo -e "───────────────────"
echo -e "1. Link Standar (SNI/Host: ${domain})"
echo -e "Link TLS    : ${vlesslink1}"
echo -e "Link NTLS   : ${vlesslink2}"
echo -e "Link GRPC   : ${vlesslink3}"
echo -e "───────────────────"
echo -e "2. Link Onering (SNI/Host: ${ONERING_SNI})"
echo -e "Link TLS Onering: ${vlesslink_onering_tls}"
echo -e "Link NTLS Onering: ${vlesslink_onering_ntls}"
echo -e "Link GRPC Onering: ${vlesslink_onering_grpc}"
echo -e "───────────────────"
echo -e "Expired On  : $exp"
echo -e "───────────────────"
echo ""
