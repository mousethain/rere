#!/usr/bin/env bash
# ========================================================
# Credit Code By Mousevpn
# ========================================================
telegram_bot_token=$(cat /usr/local/etc/v2ray/bot.key)
telegram_chatid=$(cat /usr/local/etc/v2ray/client.id)

domain=$(cat /usr/local/etc/v2ray/domain)
CONFIG_FILE="/usr/local/etc/v2ray/config.json"
# Variabel untuk Onering
BUG_DOMAIN="bug.com"
ONERING_SNI="onering:${domain}:${BUG_DOMAIN}"

red() { echo -e "\033[32;1m${*}\033[0m"; }
clear

# --- Input Username ---
until [[ $user =~ ^[a-zA-Z0-9_]+$ && ${CLIENT_EXISTS} == '0' ]]; do
    echo -e "───────────────────────────"
    echo -e "   Add Xray/Vless Account  "
    echo -e "───────────────────────────"
    read -rp "User: " -e user
    CLIENT_EXISTS=$(grep -w $user "$CONFIG_FILE" | wc -l)

    if [[ ${CLIENT_EXISTS} == '1' ]]; then
        clear
        echo -e "───────────────────────────"
        echo -e "   Add Xray/Vless Account  "
        echo ""
        echo "Nama pengguna sudah terdaftar, silakan pilih nama lain."
        echo ""
        echo -e "───────────────────────────"
    fi
done

# --- UUID Otomatis ---
uuid=$(cat /proc/sys/kernel/random/uuid)

# --- Input Masa Aktif dan Limit IP ---
read -p "Expired (days): " masaaktif
read -rp "Limit IP (1-5, 0=unlimited): " limitip

# Validasi Limit IP (hanya menerima 0-5)
if ! [[ "$limitip" =~ ^[0-5]$ ]]; then
    limitip=0
fi

# Hitung Expired
exp=$(date -d "$masaaktif days" +"%Y-%m-%d")

# --- Insert ke Config (Format BARU: #& user exp limitip) ---
sed -i '/#vless$/a\#& '"$user $exp $limitip"'\
},{"id": "'""$uuid""'","email": "'""$user""'"' "$CONFIG_FILE"

# Restart Service
systemctl restart v2ray

# --- GENERATE LINK (LENGKAP) ---
# Path disesuaikan dengan konfigurasi Nginx/Xray Anda
vlesslink1="vless://${uuid}@${domain}:443?path=/vless&security=tls&encryption=none&type=ws&host=${domain}&sni=${domain}#${user}-Ori-TLS"
vlesslink2="vless://${uuid}@${domain}:80?path=/vless&encryption=none&type=ws&host=${domain}#${user}-Ori-NTLS"
vlesslink3="vless://${uuid}@${domain}:443?mode=gun&security=tls&encryption=none&type=grpc&serviceName=vless-grpc&sni=${domain}#${user}-Ori-GRPC"
vlesslink_onering_tls="vless://${uuid}@${BUG_DOMAIN}:443?path=%2Fvless&security=tls&encryption=none&host=${domain}&type=ws&sni=${ONERING_SNI}#${user}-Onering-TLS"
vlesslink_onering_grpc="vless://${uuid}@${BUG_DOMAIN}:443?mode=gun&security=tls&encryption=none&type=grpc&serviceName=vless-grpc&host=${domain}&sni=${ONERING_SNI}#${user}-Onering-GRPC"

# --- OUTPUT TELEGRAM ---
TEKS=$(cat <<EOF
<b>───────────────────</b>
   VLESS ACCOUNT   
<b>───────────────────</b>
<b>Remarks     : </b><code>${user}</code>
<b>Domain      : </b><code>${domain}</code>
<b>Onering Addr: </b><code>${BUG_DOMAIN}</code>
<b>Port Tls    : </b><code>443</code>
<b>UUID/ID     : </b><code>${uuid}</code>
<b>Path        : </b><code>/vless</code>
<b>SNI Onering : </b><code>${ONERING_SNI}</code>
<b>Limit IP    : </b><code>${limitip}</code>
<b>───────────────────</b>
<b>1. Link Standar</b>
<b>Link TLS    :</b>
<pre>${vlesslink1}</pre>
<b>Link NTLS  :</b>
<pre>${vlesslink2}</pre>
<b>Link GRPC   :</b>
<pre>${vlesslink3}</pre>
<b>───────────────────</b>
<b>2. Link Onering</b>
<b>Link TLS Onering :</b>
<pre>${vlesslink_onering_tls}</pre>
<b>Link GRPC Onering :</b>
<pre>${vlesslink_onering_grpc}</pre>
<b>───────────────────</b>
<b>Expired On  : </b><code>$exp</code>
<b>───────────────────</b>
EOF
)

curl -s -X POST "https://api.telegram.org/bot$telegram_bot_token/sendMessage" \
    -d "chat_id=$telegram_chatid" \
    -d "parse_mode=HTML" \
    --data-urlencode "text=$TEKS" > /dev/null

# --- OUTPUT TERMINAL ---
clear
echo -e "───────────────────"
echo -e "   VLESS ACCOUNT   "
echo -e "───────────────────"
echo -e "Remarks     : ${user}" 
echo -e "Domain      : ${domain}" 
echo -e "Onering Addr: ${BUG_DOMAIN}"
echo -e "Port Tls    : 443" 
echo -e "UUID/ID     : ${uuid}"
echo -e "Path        : /vless"
echo -e "SNI Onering : ${ONERING_SNI}"
echo -e "Limit IP    : ${limitip}"
echo -e "───────────────────"
echo -e "1. Link Standar"
echo -e "Link TLS    : ${vlesslink1}"
echo -e "Link NTLS   : ${vlesslink2}"
echo -e "Link GRPC   : ${vlesslink3}"
echo -e "───────────────────"
echo -e "2. Link Onering (Bug.com)"
echo -e "Link TLS    : ${vlesslink_onering_tls}"
echo -e "Link GRPC   : ${vlesslink_onering_grpc}"
echo -e "───────────────────"
echo -e "Expired On  : $exp"
echo -e "───────────────────"
echo ""
